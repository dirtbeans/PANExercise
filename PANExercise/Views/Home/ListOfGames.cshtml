@model IEnumerable<PANExercise.Models.Game>

@{
    ViewBag.Title = "ListOfGames";
}

<h2>List of Games</h2>
<br>

<table class="table">
    <tr>
       
        <th>
            Game Name
        </th>

        <th> Click For More Info</th>
       
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
       
        <td>
            @Html.DisplayFor(modelItem => item.GameName)
        </td>
     
        <td>


            @Html.ActionLink("Details", "SingleGame", new { id = item.GameCode }) 
        </td>
    </tr>
}

</table>
